    <%=@message%>
    <%@artPiece.each do |art| %>
      <article class="art">
        <h2><%=art.name.titleize%> </h2>
        <a href="/art/<%= art.id %>" onclick="window.open(this.href, 'mywin',
        'left=20,top=20,width=350,height=350,toolbar=1,resizable=0'); return false;" >
          <img src="<%= art.image_url %>" alt="">
          </a>
        </br><a href="/art/<%= art.id %>/changeToLiked">Like</a>
      </article>
    <%end %>
  </div>
